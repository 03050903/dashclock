    <!-- Weather -->
    <string name="weather_extension_title">Weather</string>
    <string name="weather_extension_description">
        Displays the latest weather information around you, including current temperature and
        conditions, as well as forecast information. Powered by Yahoo! Weather.
    </string>
    <string name="title_weather_settings">Weather Extension Settings</string>
    <string name="temperature_template"><xliff:g id="temp">%1$s</xliff:g>°
    </string>
    <string name="weather_expanded_title_template">
        <xliff:g id="temp">%1$s</xliff:g>
        —
        <xliff:g id="condition">%2$s</xliff:g>
    </string>
    <string name="later_forecast_template">Later:
        <xliff:g id="forecast">%1$s</xliff:g>
    </string>

    <!-- Gmail -->
    <string name="gmail_extension_title">Gmail unread count</string>
    <string name="gmail_extension_description">
        Displays an unread count for your Gmail inbox or priority inbox.
    </string>
    <string name="title_gmail_settings">Gmail Extension Settings</string>
    <string name="gmail_title_template">
        <xliff:g id="emails">%1$d</xliff:g>
        unread
    </string>

    <!-- Next alarm -->
    <string name="next_alarm_extension_title">Next alarm</string>
    <string name="next_alarm_extension_description">
        Displays information about the next scheduled alarm, if you have one set.
    </string>
    <string name="next_alarm">Next alarm</string>

    <!-- Calendar -->
    <string name="calendar_extension_title">Calendar appointment</string>
    <string name="calendar_extension_description">
        Displays information about your next calendar appointment, if one is scheduled within
        the next six hours.
    </string>
    <plurals name="calendar_template_hours">
        <item quantity="one">
            <xliff:g id="hours">%1$s</xliff:g>
            hr
        </item>
        <item quantity="other">
            <xliff:g id="hours">%1$s</xliff:g>
            hrs
        </item>
    </plurals>
    <plurals name="calendar_template_mins">
        <item quantity="other">
            <xliff:g id="hours">%1$s</xliff:g>
            min
        </item>
    </plurals>

    <!-- Missed calls -->
    <string name="missed_calls_extension_title">Missed calls</string>
    <string name="missed_calls_extension_description">
        Displays the number of missed calls and the names of callers you missed.
    </string>
    <plurals name="missed_calls_title_template">
        <item quantity="one">
            <xliff:g id="missed_calls">%1$s</xliff:g>
            missed call
        </item>
        <item quantity="other">
            <xliff:g id="missed_calls">%1$s</xliff:g>
            missed calls
        </item>
    </plurals>
    <string name="missed_calls_body_template">From:
        <xliff:g id="names">%1$s</xliff:g>
    </string>

    <!-- SMS + MMS -->
    <string name="sms_extension_title">Text messages</string>
    <string name="sms_extension_description">
        Displays the number of unread SMS and MMS conversations, along with sender names.
    </string>
    <plurals name="sms_title_template">
        <item quantity="one">
            <xliff:g id="missed_calls">%1$s</xliff:g>
            unread conversation
        </item>
        <item quantity="other">
            <xliff:g id="missed_calls">%1$s</xliff:g>
            unread conversations
        </item>
    </plurals>
    <string name="sms_body_template">From:
        <xliff:g id="names">%1$s</xliff:g>
    </string>

    <!-- Welcome strings -->
    <string name="welcome_title">Customize your DashClock</string>
    <string name="welcome_description">Want to just see the current date and time? Then
        press the checkbox above and you\'re set! But why not customize DashClock with a
        few <i>extensions</i>?
        \n\n<b>Extensions</b> show you relevant and timely information, right inside DashClock!
        Try them out by adding a few extensions below.
    </string>

